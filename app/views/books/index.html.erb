<h1>All Books</h1>
<% @books.can_purchase_online.each do |book| %>
  <h3><%= book.title %></h3>
  <p>Price: $<%= book.price %></p>
  <p>Rating: <%= book.rating %></p>
  <p>Purchasable Online: <%= book.purchasable_online %></p>
  <p>Book ID: <%= book.id %></p>
  <p>Author ID: <%= book.author_id %></p></br>

  <%= link_to "Update Book", "/books/#{book.id}/edit" %>
<% end %>