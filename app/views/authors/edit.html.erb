<%= form_with url: "/authors/#{@author.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :currently_alive %>
  <%= form.text_field :currently_alive %>
  <%= form.label :age %>
  <%= form.text_field :age %>
  <%= form.submit "Update Author" %>
<% end %>