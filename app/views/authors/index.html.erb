<h1>Authors</h1>
<%= link_to "Create New Author", "/authors/new" %>

<% @authors.each do |author| %>
  <h3><%= author.name %></h3>
  <p><b>Created At: </b><%= author.created_at %></p>

  <%= link_to "Update #{author.name}", "/authors/#{author.id}/edit" %></br>
  <%= button_to "Checkout #{author.name}'s Details", "/authors/#{author.id}", method: :get %></br>
  <%= button_to "See All Books by #{author.name}", "/authors/#{author.id}/books", method: :get %></br>
  <%= button_to "Delete #{author.name}", "/authors/#{author.id}", method: :delete %></br></br>
<% end %></br>
